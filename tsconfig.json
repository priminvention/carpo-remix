{
  "extends": "@patract/dev/config/tsconfig.json",
  "exclude": ["build/**/*", "**/build/**/*"],
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "carpo-core": ["packages/extension-core/src"],
      "carpo-core/*": ["packages/extension-core/src/*"],
      "carpo-compiler": ["packages/extension-compiler/src"],
      "carpo-compiler/*": ["packages/extension-compiler/src/*"],
      "carpo-helper": ["packages/helper/src"],
      "carpo-helper/*": ["packages/helper/src/*"],
      "@carpo-remix/common": ["packages/common/src"],
      "@carpo-remix/common/*": ["packages/common/src/*"],
      "@carpo-remix/config": ["packages/config/src"],
      "@carpo-remix/config/*": ["packages/config/src/*"],
      "@carpo-remix/utils": ["packages/utils/src"],
      "@carpo-remix/utils/*": ["packages/utils/src/*"],
      "@carpo-remix/react-components": ["packages/react-components/src"],
      "@carpo-remix/react-components/*": ["packages/react-components/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@polkadot/ts", "./node_modules/@types", "./typescript/@types"]
  }
}
